<h3 class="mb-4">新規会員登録</h3>

<div class="row">
  <div class="col-md-6 m-auto">
      <%= form_with(model: @user, url: user_registration_path) do |f| %>
      <%= render "devise/shared/error_messages", resource: resource %>
      

        <div class=" mb-2 text-start">
          <%= f.label :name, class: "text-secondary" %>
          <em class="text-secondary" ></em>
          <%= f.text_field :name, autofocus: true, autocomplete: "name", class: "form-control" %>
        </div>

        <div class="field mb-2 text-start">
          <%= f.label :email, class: "text-secondary" %>
          <%= f.email_field :email, autocomplete: "email", class: "form-control" %>
        </div>

        <div class="field mb-2 text-start">
          <%= f.label :password, "パスワード(#{@minimum_password_length}文字以上)", class: "text-secondary" %>
          <%= f.password_field :password, autocomplete: "new-password", class: "form-control" %>
        </div>

        <div class="field mb-3 text-start">
          <%= f.label :password_confirmation, class: "text-secondary"%>
          <%= f.password_field :password_confirmation, autocomplete: "new-password", class: "form-control
          " %>
        </div>

        <div class="button mb-1">
              <%= f.submit "登録する", class: "w-100 btn btn-lg btn-secondary ,mb-2" %>
        </div>
      <% end %>

      <%= render "devise/shared/links" %>
  </div>
</div>
   