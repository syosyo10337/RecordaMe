<%= render 'stats_header' %>
<div class="card text-center">
  <div class="card-header">
    <ul class="nav nav-tabs card-header-tabs">
      <li class="nav-item">
        <a class="nav-link active" aria-current="true" href="#">Active</a>
      </li>
      <li class="nav-item">
        <a class="nav-link" href="#"><%= Date.current.strftime("%m月")%></a>
      </li>
      <li class="nav-item">
        <a class="nav-link" href="#" tabindex="-1" >今週</a>
      </li>
    </ul>
  </div>
  <div class="card-body">
    <%= column_chart  @items.map { |item|
  { name: item.name,
    data: item.logs.group_by_month('logs.created_at', format: 
    '%m月').sum('logs.amount / 60') }
  }, stacked: true, suffix: "時間", legend: 'hide',  dataset: {borderWidth: 1} %>
  </div>
</div>


